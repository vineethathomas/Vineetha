package com.string.sorting.config;

@Configuration
public class AppConfig {
	
	@Bean(name="helloWorldBean")
    @Description("This is a sample HelloWorld Bean")
    public HelloWorld helloWorld() {
        return new HelloWorldImpl();
    }
 

}
